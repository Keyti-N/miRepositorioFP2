//Aytor: Keyti Niebles 
import java.util.Scanner;

public class Soldaditos4 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		String[] soldados = new String[5];
		int[] nivelVida = new int[5];
		for(int i = 0; i < soldados.length; i++) {
			System.out.println("Ingrese el nombre del soldado "+ (i+1)+ ":");
			soldados[i] = sc.next();
			System.out.println("Ingrese el nivel de vida del soldado:");
			nivelVida[i] = sc.nextInt();
			
		}
		System.out.println("Los soldados son: ");
		for(int i = 0; i < soldados.length; i++) {
			System.out.println("Soldado "+ soldados[i]+ " .Nivel de vida: "+ nivelVida[i]);
		}
		sc.close(); 
	}
}
